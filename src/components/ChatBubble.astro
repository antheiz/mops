---
interface Props {
   speaker: string | undefined;
   message: string | undefined;
}

const {speaker, message} = Astro.props;
---

<div class="flex items-start gap-2.5">
   <div class="flex flex-col gap-1 max-w-[90%] md:max-w-2xl w-full">
   <div class="flex items-center space-x-2 rtl:space-x-reverse">
      <span class="text-sm font-semibold text-gray-900 dark:text-white">{speaker}</span>
   </div>
   <div class="grow max-w-[90%] md:max-w-2xl w-full space-y-3">
      <div class="bg-white border border-gray-200 rounded-e-xl rounded-es-xl p-4 space-y-3 dark:bg-neutral-900 dark:border-neutral-700">
         <p class="text-sm text-gray-800 dark:text-white">
            {message}
         </p>
      </div>
   </div>
   </div>
</div>